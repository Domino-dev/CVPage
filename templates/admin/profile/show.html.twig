{% extends 'admin/base.html.twig' %}

{% block title %}Hello ExperienceController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <span>{{profile.firstName}}</span><span>{{profile.lastName}}</span>
    <p>{{profile.location}}</p>
    <p>{{profile.position}}</p>
    <p>{{profile.shortDescription}}</p>
    {{profile.longDescription|raw}}

    <a href={{path('app_admin_profile_edit', {'id': profile.id}) }}>Edit</a>
    <form method="POST" action="{{ path('app_admin_profile_delete', {'id': profile.id}) }}" style="display:inline;" onsubmit="return confirm('Do you want to delete this profile?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ profile.id) }}">
        <button class="btn btn-danger btn-sm">Delete</button>
    </form>
</div>
{% endblock %}
